#!/bin/bash

yellowf=$(tput setaf 3)
reset=$(tput op)

filelist=(`diffiles`)

# removing deleted and not python files
for index in ${!filelist[*]}
do
	if [[ ${filelist[$index]} != *.py ]]; then
		unset filelist[$index]
	else
		if [ ! -f ${filelist[$index]} ]; then
			unset filelist[$index]
		fi
	fi
done

if [ ${#filelist[@]} = 0 ]; then
    exit 0
fi

echo ${yellowf}
pep8 ${filelist[*]}
echo ${reset}
